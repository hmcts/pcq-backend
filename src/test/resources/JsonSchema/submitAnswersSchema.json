{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "classpath:/JsonSchema/answer_definitions_schema.json",
  "type": "object",
  "title": "The PCQ Response Schema",
  "required": [
    "pcqId",
    "partyId",
    "channel",
    "completedDate",
    "serviceId",
    "actor",
    "versionNo",
    "pcqAnswers"
  ],
  "properties": {
    "pcqId": {
      "id": "#pcqId",
      "type": "string",
      "title": "The PCQ Identifier"
    },
    "ccdCaseId": {
      "id": "#ccdCaseId",
      "type": ["string", "null"],
      "title": "The Case Identifier"
    },
    "partyId": {
      "id": "#partyId",
      "type": "string",
      "title": "The Party Identifier"
    },
    "channel": {
      "id": "#channel",
      "type": "integer",
      "title": "The Channel of ingress",
      "default": 1,
      "enum": [ 1, 2 ]
    },
    "completedDate": {
      "id": "#completedDate",
      "type": "string",
      "title": "The Completed Date",
      "pattern": "\\d{4}-[01]\\d-[0-3]\\dT[0-2]\\d:[0-5]\\d:[0-5]\\d(?:\\.\\d+)?Z?"
    },
    "serviceId": {
      "id": "#serviceId",
      "type": "string",
      "title": "The Service Identifier"
    },
    "actor": {
      "id": "#actor",
      "type": "string",
      "title": "The Actor"
    },
    "versionNo": {
      "id": "#versionNo",
      "type": "integer",
      "title": "The Version Number"
    },
    "optOut": {
      "id": "#optOut",
      "type": ["string", "null"],
      "title": "The Opt Out Flag",
      "enum": ["Y", null]
    },
    "pcqAnswers": {
      "id": "#pcqAnswers",
      "title": "The PCQ Answers",
      "$ref": "#/definitions/all_answers"
    }
  }
}
